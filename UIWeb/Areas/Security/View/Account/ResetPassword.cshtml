@model UIWeb.Areas.Security.Model.ResetPasswordVm
@{
    ViewData["Title"] = "Reset password";
    Layout = "_Layout";
}

<div class="form-security form-row">
    <div class="col-lg-6 col-md-12 bg-info c-white">
        <div class="align-center">
            <h1>haval greetings you!</h1>
            <p>enter a new password</p>
        </div>
    </div>
    <div class="col-lg-6 col-md-12 bg-white">
        <div class="align-center">
            <h1 class="c-info mb-4">reset your password</h1>
            <form asp-antiforgery="true" asp-area="Security" asp-controller="Account" asp-action="ResetPassword">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Token" class="form-control" readonly="readonly" />
                    <span asp-validation-for="Token" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" placeholder="password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="ConfirmPassword" placeholder="confirm password" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="control-button bg-info">submit</button>
                </div>
                <div class="form-group m-0">
                    <a class="control-link" asp-area="" asp-controller="Home" asp-action="Index">home</a>
                </div>
            </form>
        </div>
    </div>
</div>